import React, { useState } from 'react';
import Navbar from '../Navbarjs';

/**
 * BookingFormjs component renders a simple booking form for Shelter­Stead.
 * It collects details such as name, email, service type, dates, number of pets, and notes.
 * On submission it logs the form data and displays a success message.
 * In production, this would send data to the backend via axios to create a booking.
 */
const BookingFormjs = () => {
  const [formData, setFormData] = useState({
    name: '',
    email: '',
    service: '',
    startDate: '',
    endDate: '',
    pets: 1,
    notes: ''
  });

  const handleChange = (e) => {
    const { name, value } = e.target;
    setFormData({ ...formData, [name]: value });
  };

  const handleSubmit = (e) => {
    e.preventDefault();
    // TODO: connect to backend (e.g., via axios.post('/api/book', formData));
    console.log('Booking data:', formData);
    alert('Thank you for your booking request! We will contact you soon.');
  };

  return (
    <>
      <Navbar />
      <div className="booking-form-container" style={{ padding: '2rem' }}>
        <h2>Book Your Pet’s Stay</h2>
        <form onSubmit={handleSubmit} style={{ display: 'flex', flexDirection: 'column', gap: '1rem' }}>
          <label>
            Name
            <input type="text" name="name" value={formData.name} onChange={handleChange} required />
          </label>
          <label>
            Email
            <input type="email" name="email" value={formData.email} onChange={handleChange} required />
          </label>
          <label>
            Service
            <select name="service" value={formData.service} onChange={handleChange} required>
              <option value="">Select a service</option>
              <option value="boarding">Boarding</option>
              <option value="daycare">Daycare</option>
              <option value="training">Training</option>
            </select>
          </label>
          <label>
            Start Date
            <input type="date" name="startDate" value={formData.startDate} onChange={handleChange} required />
          </label>
          <label>
            End Date
            <input type="date" name="endDate" value={formData.endDate} onChange={handleChange} required />
          </label>
          <label>
            Number of Pets
            <input type="number" name="pets" value={formData.pets} onChange={handleChange} min="1" />
          </label>
          <label>
            Notes
            <textarea name="notes" value={formData.notes} onChange={handleChange} />
          </label>
          <button type="submit">Submit</button>
        </form>
      </div>
    </>
  );
};

export default BookingFormjs;
